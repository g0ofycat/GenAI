{
  "model": {
    "d_model": 256,
    "num_layers": 3,
    "attention_heads": 4,
    "vocab_size": 50271
  },
  
  "training": {
    "batch_size": 32,
    "learning_rate": 0.001,
    "num_epochs": 10,
    "clip_grad_norm": 1.0,
    "weight_decay": 0.01,
    "dropout_rate": 0.1
  },

  "tokenizer": {
    "vocab_path": "vocab.json",
    "merges_path": "merges.txt",
    "lowercase": false,
    "tokenizer_type": "bpe",
    "bpe_seperator": "\u0120"
  },

  "generation": {
    "stop_token": "<|endoftext|>"
  },

  "sampling": {
    "sampling_strategy": "temperature",
    "temperature": 0.1,
    "top_k": 35,
    "top_p": 0.9
  },

  "chatbot": {
    "max_token_input": 1200,
    "system_prompt": "You are an AI model that is meant to help people with their problems. Be respectful and precise with your responses.",
    "MAX_PROMPT_HISTORY": 5
  }
}